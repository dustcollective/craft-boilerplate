# Ignore everthing in craft...
craft/*

# ...except specified plugins...
!craft/plugins/
craft/plugins/*
!craft/plugins/anchor/
!craft/plugins/cachey/
!craft/plugins/emailwrap/
!craft/plugins/refreshstring/
!craft/plugins/typogrify/

# ...translations...
!craft/translations/

# ...the custom admin logo...
!craft/storage/logo/

# ...non-sensitive configuration...
!craft/config/
craft/config/db.php
craft/config/license.key

# ...and your templates...
!/craft/templates/

# ...except templates generated from src.
/craft/templates/_partials/favicons.html
/craft/templates/_partials/inline/

# Now ignore everything in public...
public/*

# ...except locales...
#!public/en/

# ...and assets...
!public/assets/

# ...but do ignore assets generated from src.
public/assets/css/
public/assets/js/
public/assets/img/
public/assets/fonts/

# Ignore dev stuff.
dev/

# Now ignore dependencies...
bower_components/
node_modules/

# ...debris...
.sass-cache/
*.css.map
.DS_Store
npm-debug.log

# ...and local development stuff.
log/
